<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MarinaMS</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #e0f7fa; /* Ana arka plan rengi */
            display: flex;
            flex-direction: column;
        }

        .container-fluid {
            display: flex;
            height: 100%;
            padding: 0;
            margin: 0;
        }

        .sidebar {
            height: 100vh;
            color: darkblue;
            width: 350px; /* Sidebar genişliği */
            position: fixed;
            top: 0;
            left: 0;
            background-color: #BED7DC; /* Sidebar arka plan rengi */
            padding-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-right: 10px;
            border-right: 2px solid #51829B; /* Border eklenmiş */
        }

            .sidebar a {
                width: 100%;
                text-decoration: none;
                margin: 15px 0;
                font-size: 18px;
                padding: 3px 9px;
                color: #2C3A49;
                display: flex;
                align-items: center;
                border-radius: 10px;
            }

        .navbar a {
            font-size: 18px;
            padding: 9px;
            color: #2C3A49;
            display: flex;
            align-items: center;
            border-radius: 10px;
        }

            .navbar a:hover {
                color: azure;
            }

        .main-content-wrapper {
            display: flex;
            flex-direction: column;
            flex-grow: 1;
            margin-left: 350px; /* Sidebar genişliği kadar sol boşluk */
            height: 100%;
        }

        .navbar {
            height: 56px;
            background-color: #BED7DC;
            z-index: 1000;
            border-bottom: 2px solid #51829B; /* Border eklenmiş */
        }

        .content {
            flex-grow: 1;
            background-color: #e0f7fa; /* Ana içerik arka plan rengi */
            padding: 20px;
            overflow-y: auto;
        }

        a:hover {
            background-color: #2C3A49;
            color: azure;
            transition: all 0.2s;
        }

        .link {
            gap: 6px;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <!-- Sidebar -->
        <partial name="~/Views/Partials/Partial_Sidebar.cshtml"/>

        <!-- Main Content Wrapper -->
        <div class="main-content-wrapper">
            <!-- Navbar -->
            <partial name="~/Views/Partials/Partial_Navbar.cshtml" />

            <!-- Main Content -->
            <div class="content" style="background-color: white; height: 100%; width: 100%; overflow-y: auto;">
                <!-- İçerik dinamik olarak buraya renderlanacak -->

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://d3js.org/d3.v5.min.js">
   
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        <script src="/MMSBootstrap/zoom.js"></script>
</body>
</html>
