@model MarinaMS.Models.UserLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,
    initial-scale=1.0" />
    <title>Login Form in LimanAI | LYS</title>
    <link rel="stylesheet" href="~/MMSBootstrap/stylelogin.css" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
</head>

<body>
    <div class="wrapper">
        <form method="post">
            <h1>Giriş</h1>
            <div class="input-box">
                <input class="form-control" id="inputEmail" type="text" asp-for="Username" placeholder="Kullanıcı Adı" required />
                <i class="bx bxs-user"></i>
            </div>
            <div class="input-box">
                <input class="form-control" type="password" id="inputPassword" asp-for="Password" placeholder="Şifre" required />
                <i class="bx bxs-lock"></i>
            </div>

            <div class="remember-forgot">
                <label><input type="checkbox" />Beni hatırla</label>
                <a href="#">Şifreni mi unuttun?</a>
            </div>

            <button class="btn btn-primary">Giriş</button>

            <div class="register-link">
                <p>Henüz bir hesabın yok mu ? <a href="/Register/Index/">Üye Ol</a></p>
            </div>
        </form>
    </div>
</body>

</html>